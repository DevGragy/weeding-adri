---
import '@fontsource/playball';
import '@fontsource-variable/montserrat';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="container-half">
  <h2>{title}</h2>
  <div id="countdown">
    <div>
      <span id="dias" class="time"></span>
      <div class="smalltext">DÃ­as</div>
    </div>
    <div>
      <span id="horas" class="time"></span>
      <div class="smalltext">Horas</div>
    </div>
    <div>
      <span id="minutos" class="time"></span>
      <div class="smalltext">Minutos</div>
    </div>
    <div>
      <span id="segundos" class="time"></span>
      <div class="smalltext">Segundos</div>
    </div>
  </div>
</div>

<script>
  function countdown() {
    const targetDate = new Date("2024-07-13 21:00:00").getTime();
    // const targetDate = new Date("2024-03-20 14:50:00").getTime();
    const date = new Date().getTime();
    const timeLeft = targetDate - date;

    const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
    const hours = Math.floor(
      (timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)
    );
    const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

    const daysHTML: any = document.getElementById("dias");
    const hoursHTML: any = document.getElementById("horas");
    const minutesHTML: any = document.getElementById("minutos");
    const secondsHTML: any = document.getElementById("segundos");

    if (timeLeft <= 0) {
      daysHTML.innerHTML = "0";
      hoursHTML.innerHTML = "0";
      minutesHTML.innerHTML = "0";
      secondsHTML.innerHTML = "0";
    } else {
      daysHTML.innerHTML = days;
      hoursHTML.innerHTML = hours;
      minutesHTML.innerHTML = minutes;
      secondsHTML.innerHTML = seconds;
    }
  }

  setInterval(countdown, 1000);
</script>

<style>
  .container-half {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    margin: 32px auto;
    padding: 48px 1rem;
    width: 100%;
    font-family: 'Montserrat Variable', sans-serif;
    font-weight: 300;
    background-image: url("/leaves.jpg");
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    font-size: 20px;
  }
  .container-half h2 {
    color: #4f6b4d;
  }
  #countdown {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  #countdown div {
    text-align: center;
    margin: 0 20px;
  }
  #countdown div:last-child {
    margin: 0;
  }
  #countdown span {
    color: #4f6b4d;
    font-family: 'Playball', system-ui;
  }
  .smalltext {
    color: #000;
    margin-left: 0;
    font-size: 12px;
  }
</style>
