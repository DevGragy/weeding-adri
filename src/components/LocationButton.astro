---
interface Props {
  href: string;
  type: string;
  content: string;
}

const { href, type, content } = Astro.props;
---

<a href={href} target="_blank" class=`button ${type}`>{content}</a>

<style>
  .button {
    font-weight: bold;
    border: none;
    color: #000;
    padding: 15px 25px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    cursor: pointer;
    border-radius: 10px;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    transition: background-color 0.3s ease;
    margin-top: 48px;
  }
  .weeding {
    background-color: #fcf8e3;
  }
  .weeding:hover {
    background-color: #f7ecb5;
  }
  .attendance {
    margin-top: 24px;
    background-color: #fcf8e3;
  }
  .attendance:hover {
    background-color: #f7ecb5;
  }
</style>
