<audio autoplay loop id="song">
  <source src="/audio/Creo_en_ti.mp3" type="audio/mpeg" />
</audio>

<script>
  const changeVolume = () => {
    const music:any = document.getElementById("song");
    music.volume = 0.1;
  };
  document.addEventListener("DOMContentLoaded", changeVolume);

  window.addEventListener('touchstart', () => {
    document.getElementById('song').muted = false
    document.getElementById('song').play()
  })
</script>
