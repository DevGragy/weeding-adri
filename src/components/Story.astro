---
interface Props {
    title: string;
    body: string;
}

const { title, body } = Astro.props;
---

<div class="container-half">
    <h2>{title}</h2>
    <p>{body}</p>
</div>

<style>
    .container-half {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }
</style>