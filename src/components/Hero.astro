---
import '@fontsource/playball';
import '@fontsource-variable/montserrat';

interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<div class="container">
  <div class="text-container">
    <h2>{subtitle}</h2>
    <h1>{title}</h1>
  </div>
</div>

<style>
  @media (max-width: 767px) {
    .container {
      background-attachment: initial;
    }
  }
  .container {
    height: 100vh;
    width: 100%;
    margin: auto;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    background-image: url("/images/ba_01_min.jpg");
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
  }
  .container h1 {
    font-family: 'Playball', system-ui;
    font-weight: 400;
    margin-top: 0;
  }
  .container h2 {
    font-family: 'Montserrat Variable', sans-serif;
    font-weight: 500;
  }
  .text-container {
    margin-bottom: 120px;
  }
</style>
