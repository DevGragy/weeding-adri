---
interface Props {
  title: string;
  subtitle: string;
  mainImage: string;
  celebration: string;
  date: string;
  start: string;
  location: string;
}

const { title, subtitle, mainImage, celebration, date, start, location } =
  Astro.props;
---

<div class="container">
  <div>
    <img src="./src/images/ba-01-min.jpg" alt={title} />
  </div>
  <div>
    <h3>{subtitle.toUpperCase()}</h3>
    <h2 class="mt-null">{title}</h2>
    <h3>{celebration.toUpperCase()}</h3>
    <h2>{date}</h2>
    <h3>{start.toUpperCase()}</h3>
    <h3>{location.toUpperCase()}</h3>
  </div>
</div>

<style>
  .container {
    height: 100vh;
    width: 100%;
    margin: auto;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: black;
    font-family: "Arsenal", sans-serif;
    font-weight: 400;
    font-style: normal;
  }
  .container img {
    width: 100%;
  }
  .container h2 {
    font-size: 40px;
  }
  .mt-null {
    margin-top: 0;
  }

  @media only screen and (min-width: 768px) {
    .container {
        display: grid;
        grid-template-columns: 1fr 1fr;
    }
    .container img {
    max-width: 350px;
  }
  }
</style>
